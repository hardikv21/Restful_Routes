<%- include ('partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit a <%= foundBlog.name %></div>
    <form class="ui form" action="/blogs/<%= foundBlog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="blog[name]" value="<%= foundBlog.name %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= foundBlog.image %>">
        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="blog[description]" required><%= foundBlog.description %></textarea>
        </div>
        <button class="ui positive button" type="submit">Submit</button>
    </form>
</div>

<%- include ('partials/footer') %>